{
  "name": "synapse-firefox",
  "version": "0.1.0",
  "description": "Firefox addon for Synapse",
  "scripts": {
    "build": "webpack",
    "format:js": "prettier --write .",
    "format:vala": "find . -name '*.vala' -exec uncrustify -c uncrustify.cfg --replace {} \\;",
    "prerelease": "node scripts/build.js",
    "release": "standard-version"
  },
  "author": "payson@paysonwallach.com",
  "license": "GPL-3.0",
  "dependencies": {
    "object-sizeof": "^1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "nunjucks": "^3.2.2",
    "prettier": "2.2.1",
    "standard-version": "^8.0.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run prerelease"
    }
  }
}
